= form_for @task do |f|
  - if @task.errors.any?
    #error_explanation
      %h2= "#{pluralize(@task.errors.count, "error")} prohibited this task from being saved:"
      %ul
        - @task.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :executer
    = f.collection_select(:executer, User.all, :id, :name, :prompt => '') 
  .field
    = f.label :status
    = f.text_field :status
  .field
    = f.label :persentage
    = f.number_field :persentage
  .field
    = f.label :project
    = f.collection_select(:project, Project.all, :id, :name, :prompt => 'Please select project') 
  /    = f.label :project
  /    = f.text_field :project
    

  .actions
    = f.submit 'Save'
